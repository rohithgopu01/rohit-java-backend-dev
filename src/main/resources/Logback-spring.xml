<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ===============================
         Console Appender
         =============================== -->
    <appender name="DEBUG_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Log format: Date Time | Thread | Level | Logger | Message -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ===============================
         File Appender (Rolling Logs)
         =============================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- Main log file -->
        <file>logs/application.log</file>

        <!-- Rolling policy: one log file per day, keep 30 days -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <!-- Same log format as console -->
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ===============================
         Root Logger
         =============================== -->
    <root level="INFO">
        <!-- Write logs to file -->
        <appender-ref ref="FILE" />
        <!-- Show logs in console -->
        <appender-ref ref="DEBUG_CONSOLE" />
    </root>

</configuration>